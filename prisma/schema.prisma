generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(auto()) @map("_id") @db.ObjectId
  email         String    @unique
  role          Role      @default(CLIENT)
  
  // Profile
  firstName     String
  lastName      String
  phone         String?
  address       Address?
  
  // Wallet
  walletBalance Int       @default(0) @map("wallet_balance") // In Tokens
  transactions  Transaction[]
  
  // Relations
  freelancer    Freelancer?
  orders        Order[]     @relation("ClientOrders")
  
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  @@map("users")
}

model Freelancer {
  id            String    @id @default(auto()) @map("_id") @db.ObjectId
  // Link to User
  userId        String    @unique @db.ObjectId
  user          User      @relation(fields: [userId], references: [id])
  
  // Public Profile
  slug          String    @unique
  name          String
  avatarUrl     String    @map("avatar_url")
  location      String
  flag          String
  role          String
  bio           String
  verified      Boolean   @default(false)
  
  // Stats
  rating        Float     @default(0)
  reviewsCount  Int       @default(0) @map("reviews_count")
  
  services      Service[]
  orders        Order[]   @relation("FreelancerOrders")
  
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  @@map("freelancers")
}

model Service {
  id           String    @id @default(auto()) @map("_id") @db.ObjectId
  title        String
  priceTokens  Int       @map("price_tokens")
  displayPrice String?   @map("display_price")
  deliveryDays Int       @map("delivery_days")
  category     String
  tags         String[]
  overview     String
  deliverables String[]
  imageUrl     String?   @map("image_url")

  freelancerId String    @db.ObjectId
  freelancer   Freelancer @relation(fields: [freelancerId], references: [id])
  
  addons       ServiceAddon[]
  reviews      Review[]
  orders       Order[]

  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  @@map("services")
}

model ServiceAddon {
  id           String    @id @default(auto()) @map("_id") @db.ObjectId
  title        String
  description  String
  priceTokens  Int       @map("price_tokens")
  isStandalone Boolean   @default(false) @map("is_standalone")
  
  serviceId    String    @db.ObjectId
  service      Service   @relation(fields: [serviceId], references: [id])
  
  @@map("service_addons")
}

model Review {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  authorName String   @map("author_name")
  text       String
  rating     Int
  
  serviceId  String   @db.ObjectId
  service    Service  @relation(fields: [serviceId], references: [id])

  createdAt  DateTime @default(now())

  @@map("reviews")
}

model Order {
  id           String      @id @default(auto()) @map("_id") @db.ObjectId
  
  // Relations
  clientId     String      @db.ObjectId
  client       User        @relation("ClientOrders", fields: [clientId], references: [id])
  
  freelancerId String      @db.ObjectId
  freelancer   Freelancer  @relation("FreelancerOrders", fields: [freelancerId], references: [id])
  
  serviceId    String      @db.ObjectId
  service      Service     @relation(fields: [serviceId], references: [id])
  
  // Snapshot Data
  totalTokens  Int         @map("total_tokens")
  status       OrderStatus @default(PENDING)
  
  // Requirements
  brief        String?
  attachments  String[]
  
  createdAt    DateTime    @default(now())
  deliveryDate DateTime?   @map("delivery_date")
  
  @@map("orders")
}

model Transaction {
  id           String    @id @default(auto()) @map("_id") @db.ObjectId
  userId       String    @db.ObjectId
  user         User      @relation(fields: [userId], references: [id])
  
  amount       Int
  type         TxType
  description  String
  referenceId  String?   @map("reference_id")
  
  createdAt    DateTime  @default(now())
  
  @@map("transactions")
}

type Address {
  street    String
  city      String
  country   String
  postcode  String
}

enum Role {
  CLIENT
  FREELANCER
  ADMIN
}

enum OrderStatus {
  PENDING
  IN_PROGRESS
  REVIEW
  COMPLETED
  CANCELLED
}

enum TxType {
  DEPOSIT
  SPEND
  EARNING
  WITHDRAWAL
}
